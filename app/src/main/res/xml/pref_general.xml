<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/title_location_pref"
        android:key="@string/key_location_pref"
        android:defaultValue="@string/default_location_pref"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="Units"
        android:key="units"
        android:entries="@array/unitEntries"
        android:entryValues="@array/unitValues"
        android:defaultValue="@string/default_units_pref"/>

</PreferenceScreen>