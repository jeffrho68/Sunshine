<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- ListView / ListItem styles. -->
    <style name="ListItem">
        <item name="android:background">@drawable/touch_selector</item>
    </style>

    <style name="ListView">
        <item name="android:choiceMode">none</item>
    </style>

    <style name="CondensedTextParent">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ForecastLargeText" parent="CondensedTextParent">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="ForecastSmallText" parent="CondensedTextParent">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="TodayTextParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TodayHighText" parent="TodayTextParent">
        <item name="android:textSize">72sp</item>
    </style>

    <style name="TodayLowText" parent="TodayTextParent">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TodayDateText" parent="TodayTextParent">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TodayForecastText" parent="TodayTextParent">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DetailsDayText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailsDateText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/details_grey</item>
    </style>

    <style name="DetailsHighText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailsLowText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/details_grey</item>
    </style>

    <style name="DetailsForecastText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/details_grey</item>
    </style>

    <style name="DetailsOthersText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
